<!-- クイズページ -->

<div class="container mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-6 max-w-md mx-auto">
    <p class="text-lg font-bold text-gray-700 mb-2">問題 <%= @current_quiz_number %> / <%= @total_quizzes %></p>
    <p class="text-xl text-gray-800 mb-4"><%= @quiz.question %></p>

    <%= form_with url: answer_weak_quiz_path(@quiz), local: true, data: { turbo: false } do |form| %>
      <div class="grid grid-cols-1 gap-4">
        <% @choices.each do |choice| %>
          <%= button_tag choice.text, type: 'submit', name: 'choice_id', value: choice.id, class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>