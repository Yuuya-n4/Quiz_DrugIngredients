<!-- クイズページ -->

<div class="container mx-auto px-1 sm:px-6 mt-8">
<div class="service-background rounded-lg shadow-md relative p-2 sm:p-10">
  <div class="bg-white bg-opacity-90 rounded-lg shadow-md p-4 sm:p-6 w-full sm:max-w-xl mx-auto">
    <p class="text-xl font-bold text-gray-800 mb-8">問題 <%= @current_quiz_number %> / <%= @total_quizzes %></p>
    <p class="text-2xl text-gray-800 mb-8 md:mb-12"><%= @quiz.question %></p>

    <%= form_with url: answer_weak_quiz_path(@quiz), local: true, data: { turbo: false } do |form| %>
      <div class="grid grid-cols-1 gap-4 md:gap-6">
        <% @choices.each do |choice| %>
          <%= button_tag choice.text, type: 'submit', name: 'choice_id', value: choice.id, class: "w-full bg-blue-500 hover:bg-blue-700 text-white text-base sm:text-lg md:text-xl lg:text-2xl font-medium  py-2 px-4 rounded transition duration-300 ease-in-out" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
</div>