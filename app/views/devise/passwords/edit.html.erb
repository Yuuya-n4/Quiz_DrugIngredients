<div class="container mx-auto px-4 py-8">
  <div class="sm:w-1/2 md:w-1/3 mx-auto">
    <h2 class="text-2xl font-bold text-gray-800 mb-6"><%= t('.change_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "bg-white p-4 rounded-lg shadow-md max-w-xs mx-auto") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field mb-4">
        <%= f.label :password, t('.new_password'), class: "block text-gray-700 text-sm font-bold mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-600 mb-2"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation, t('.confirm_new_password'), class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="actions mt-6">
        <%= f.submit t('.change_my_password'), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>