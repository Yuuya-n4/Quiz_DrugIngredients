<header class="w-full bg-blue-600 text-white py-4 px-8">
  <div class="container mx-auto flex justify-between items-center">
    <%= link_to 'クイズ！市販薬の成分', root_path, class: "text-lg font-bold" %>
    <div class="flex items-center">
      <div class="relative mr-4">
        <button id="dropdownButton" class="focus:outline-none">マイページ</button>
        <div id="dropdownMenu" class="hidden absolute right-0 mt-2 py-2 w-48 bg-white rounded-md shadow-xl">
          <%= link_to 'スコアページ', scores_mypages_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-blue-500 hover:text-white" %>
          <%= link_to 'ユーザー情報編集', profile_mypages_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-blue-500 hover:text-white" %>
        </div>
      </div>
      <% unless user_signed_in? %>
        <%= link_to '会員登録', new_user_registration_path, class: "ml-4" %>
        <%= link_to 'ログイン', new_user_session_path, class: "ml-4" %>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :get, class: "ml-4" %>
      <% end %>
    </div>
  </div>
</header>

<script>
  document.getElementById("dropdownButton").addEventListener("click", function() {
    document.getElementById("dropdownMenu").classList.toggle("hidden");
  });
</script>
